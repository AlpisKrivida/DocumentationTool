@using DocumentationTool.Client.Shared.PowerConsumerSH
@using DocumentationTool.Client.Shared.GeneralSH
@using DocumentationTool.Client.Shared.ModelSH
@using DocumentationTool.Client.Shared.FormFactorSH

<EditForm Model="Switch" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <h3>Switch</h3>
    <div class="form-group row">
        <div class="col-md-8">
            <div class="formInputModel">
                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Vlan managment protocol</label>
                    <div class="col-md-4 ">
                        <InputText class="form-control form-control-sm" @bind-Value="@Switch.Vlan" />
                        <ValidationMessage For="@(() => Switch.Vlan)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Role</label>
                    <div class="col-md-4 ">
                        <InputText class="form-control form-control-sm" @bind-Value="@Switch.Role" />
                        <ValidationMessage For="@(() => Switch.Role)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Spanning Tree</label>
                    <div class="col-md-4 ">
                        <InputText class="form-control form-control-sm" @bind-Value="@Switch.SpanningTree" />
                        <ValidationMessage For="@(() => Switch.SpanningTree)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Description</label>
                    <div class="col-md-7 ">
                        <InputTextArea class="form-control" @bind-Value="@Switch.Description" />
                        <ValidationMessage For="@(() => Switch.Description)" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <ModelForm Model="Model" />
    <GeneralForm General="General" />
    <FormFactorForm FormFactor="FormFactor" />
    <PowerConsumerForm PowerConsumer="PowerConsumer" />

    <button class="btn btn-primary" type="submit">Save Changes</button>
</EditForm>

@code {
    [Parameter] public Switch Switch { get; set; }
    [Parameter] public Model Model { get; set; }
    [Parameter] public General General { get; set; }
    [Parameter] public FormFactor FormFactor { get; set; }
    [Parameter] public PowerConsumer PowerConsumer { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
