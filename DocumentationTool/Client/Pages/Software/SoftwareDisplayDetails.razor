<div class="container-fluid pt-4">
    <div class="row">
        <div class="col-8">
            <h3>Application Details</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="card">
                <div class="row">
                    <label class="font-weight-bold text-left">Specification: </label>
                    <label class="text-right pl-3">@Application.Specification</label>
                </div>
                <div class="row">
                    <label class="font-weight-bold text-left">Manufacturer: </label>
                    <label class="text-right pl-3">@Application.Manufacturer</label>
                </div>
                <div class="row">
                    <label class="font-weight-bold text-left">Description: </label>
                    <label class="text-right pl-3">@Application.Description</label>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Application Application { get; set; }
}
