@page "/printer"
@inject IPrinterRepository printerRepository

<h3>Printer Index</h3>

<div class="form-group">
    <a class="btn btn-info" href="printer/create">New Printer</a>
</div>

<Pagination CurrentPage="@paginationDTO.Page" TotalAmountPages="totalAmountPages"
            SelectedPage="SelectedPage" />

<GenericList List="Printer">
    <WholeListTemplate>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Type</th>
                    <th>Color</th>
                    <th>Duplex</th>
                    <th>Emulation</th>
                    <th>Paper Formas</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Printer)
                {
                    <tr>
                        <td>
                            <a class="btn btn-success" href="/printer/edit/@item.Id">Edit</a>
                            <button class="btn btn-danger" @onclick="@(() => DeletePrinter(item.Id))">Delete</button>
                        </td>
                        <td>@item.Type</td>
                        <td>@item.Color</td>
                        <td>@item.Duplex</td>
                        <td>@item.Emulation</td>
                        <td>@item.PaperFormat</td>
                    </tr>
                }
            </tbody>
        </table>
    </WholeListTemplate>
</GenericList>
@code {
    List<Printer> Printer;
    PaginationDTO paginationDTO = new PaginationDTO() { RecordsPerPage = 1 };
    private int totalAmountPages;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadPrinters();
        }
        catch (Exception ex)
        {

        }
    }

    private async Task LoadPrinters()
    {
        var paginatedResponse = await printerRepository.GetPrinters(paginationDTO);
        Printer = paginatedResponse.Response;
        totalAmountPages = paginatedResponse.TotalAmountPages;
    }

    private async Task SelectedPage(int page)
    {
        paginationDTO.Page = page;
        await LoadPrinters();
    }

    private async Task DeletePrinter(int id)
    {
        await printerRepository.DeletePrinter(id);
        await LoadPrinters();
    }
}
