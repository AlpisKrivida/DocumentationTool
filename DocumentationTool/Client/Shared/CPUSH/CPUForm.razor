<h3>CPU Form</h3>
<EditForm Model="CPU">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <div class="col-md-8">
            <div class="formInputModel">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">CPU cores</label>
                    <div class="col-sm-4">
                        <InputNumber class="form-control form-control-sm" @bind-Value="@CPU.CPUCores" />
                        <ValidationMessage For="@(() => CPU.CPUCores)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@CPU.Title" />
                        <ValidationMessage For="@(() => CPU.Title)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Manufacturer</label>
                    <div class="col-sm-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@CPU.Manufacturer" />
                        <ValidationMessage For="@(() => CPU.Manufacturer)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Type</label>
                    <div class="col-sm-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@CPU.Type" />
                        <ValidationMessage For="@(() => CPU.Type)" />
                    </div>
                </div>

                <div class="form-group row ">
                    <label class="col-md-2 col-form-label">CPU frequency </label>
                    <div class="col-md-4">
                        <InputNumber class="form-control form-control-sm" @bind-Value="@CPU.CPUFrequency" />
                        <ValidationMessage For="@(() => CPU.CPUFrequency)" />
                    </div>
                    <div class="col-md-3">
                        <InputSelect class="form-control form-control-sm" @bind-Value="@CPU.CPUFrequencyType">
                            <option value="">Select measure...</option>
                            <option>GHz</option>
                            <option>THz</option>
                            <option>MHz</option>
                            <option>KHz</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => CPU.CPUFrequencyType)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-7">
                        <InputTextArea class="form-control form-control-sm" @bind-Value="@CPU.Description" />
                        <ValidationMessage For="@(() => CPU.Description)" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</EditForm>

@code {
    [Parameter] public CPU CPU { get; set; }
}

