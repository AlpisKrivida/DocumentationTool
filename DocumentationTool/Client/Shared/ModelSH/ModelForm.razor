<h3>Model</h3>
<EditForm Model="Model">
    <DataAnnotationsValidator />

   
    <div class="form-group row">
        <div class="col-md-8">
            <div class="formInputModel">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Manufacturer</label>
                    <div class="col-sm-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@Model.Manufacturer" />
                        <ValidationMessage For="@(() => Model.Manufacturer)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Model</label>
                    <div class="col-sm-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@Model.Name" />
                        <ValidationMessage For="@(() => Model.Name)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Product ID</label>
                    <div class="col-sm-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@Model.ProductID" />
                        <ValidationMessage For="@(() => Model.ProductID)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Service Tag</label>
                    <div class="col-sm-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@Model.ServiceTag" />
                        <ValidationMessage For="@(() => Model.ServiceTag)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Serial number</label>
                    <div class="col-sm-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@Model.SerialNumber" />
                        <ValidationMessage For="@(() => Model.SerialNumber)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Firmware</label>
                    <div class="col-sm-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@Model.Firmware" />
                        <ValidationMessage For="@(() => Model.Firmware)" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-7">
                        <InputTextArea class="form-control" @bind-Value="@Model.Description" />
                        <ValidationMessage For="@(() => Model.Description)" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</EditForm>

    @code {
        [Parameter] public Model Model { get; set; }
    }

