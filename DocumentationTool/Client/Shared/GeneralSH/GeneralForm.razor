<h3>General</h3>
<EditForm Model="General">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <div class="col-md-8">
            <div class="formInputModel">
                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Title</label>
                    <div class="col-md-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@General.Title" />
                        <ValidationMessage For="@(() => General.Title)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Category</label>
                    <div class="col-md-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@General.Category" />
                        <ValidationMessage For="@(() => General.Category)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Purpose</label>
                    <div class="col-md-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@General.Purpose" />
                        <ValidationMessage For="@(() => General.Purpose)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Creatio date</label>
                    <div class="col-md-4">
                        <input disabled="disabled" read class="form-control form-control-sm" @bind="@General.CreatioDate" />
                        @*<ValidationMessage For="@(() => General.CreatioDate)" />*@
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Date of Change</label>
                    <div class="col-md-4">
                        <input disabled="disabled" class="form-control form-control-sm" readonly @bind="@General.DateOfChange" />
                        @*<ValidationMessage For="@(() => General.DateOfChange)" />*@
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Condition</label>
                    <div class="col-md-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@General.Condition" />
                        <ValidationMessage For="@(() => General.Condition)" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 col-form-label">CMDB status</label>
                    <div class="col-md-4">
                        <InputSelect class="form-control form-control-sm" @bind-Value="@General.CMDBStatus">
                            <option value="">Select status...</option>
                            <option>defect</option>
                            <option>delivered</option>
                            <option>in operation</option>
                            <option>ordered</option>
                            <option>planned</option>
                        </InputSelect>
                    </div>
                    <ValidationMessage For="@(() => General.CMDBStatus)" />
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Object ID</label>
                    <div class="col-md-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@General.ObjectID" />
                        <ValidationMessage For="@(() => General.ObjectID)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Onject type</label>
                    <div class="col-md-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@General.ObjectType" />
                        <ValidationMessage For="@(() => General.ObjectType)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">SYSID</label>
                    <div class="col-md-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@General.SYSID" />
                        <ValidationMessage For="@(() => General.SYSID)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Description</label>
                    <div class="col-md-7">
                        <InputTextArea class="form-control" @bind-Value="@General.Description" />
                        <ValidationMessage For="@(() => General.Description)" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</EditForm>

@code {
    [Parameter] public General General { get; set; }
}
