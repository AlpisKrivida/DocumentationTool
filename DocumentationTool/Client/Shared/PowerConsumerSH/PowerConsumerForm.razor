<h3>Power Consumer</h3>
<EditForm Model="PowerConsumer">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <div class="col-md-8">
            <div class="formInputModel">
                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Title</label>
                    <div class="col-md-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@PowerConsumer.Title" />
                        <ValidationMessage For="@(() => PowerConsumer.Title)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Active</label>
                    <div>
                        <InputCheckbox @bind-Value="@PowerConsumer.Active" />
                        <ValidationMessage For="@(() => PowerConsumer.Active)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Manufactutrer</label>
                    <div class="col-md-4 ">
                        <InputText class="form-control form-control-sm" @bind-Value="@PowerConsumer.Manufacturer" />
                        <ValidationMessage For="@(() => PowerConsumer.Manufacturer)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">PowerModel</label>
                    <div class="col-md-4 ">
                        <InputText class="form-control form-control-sm" @bind-Value="@PowerConsumer.PowerModel" />
                        <ValidationMessage For="@(() => PowerConsumer.PowerModel)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Volt</label>
                    <div  class="col-md-4 ">
                        <InputNumber class="form-control form-control-sm" @bind-Value="@PowerConsumer.Volt" />
                        <ValidationMessage For="@(() => PowerConsumer.Volt)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Watt</label>
                    <div class="col-md-4">
                        <InputNumber class="form-control form-control-sm" @bind-Value="@PowerConsumer.Watt" />
                        <ValidationMessage For="@(() => PowerConsumer.Watt)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Ampere</label>
                    <div class="col-md-4">
                        <InputNumber class="form-control form-control-sm" @bind-Value="@PowerConsumer.Ampere" />
                        <ValidationMessage For="@(() => PowerConsumer.Ampere)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">BTU</label>
                    <div class="col-md-4">
                        <InputText class="form-control form-control-sm" @bind-Value="@PowerConsumer.BTU" />
                        <ValidationMessage For="@(() => PowerConsumer.BTU)" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Description</label>
                    <div class="col-md-7">
                        <InputTextArea class="form-control" @bind-Value="@PowerConsumer.Description" />
                        <ValidationMessage For="@(() => PowerConsumer.Description)" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</EditForm>

@code {
    [Parameter] public PowerConsumer PowerConsumer { get; set; }
}

